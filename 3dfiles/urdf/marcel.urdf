<?xml version="1.0"?>
<robot name="marcel">
    <material name="blue">
        <color rgba="0 0 1.0 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>

    <link name="base_link">
        <visual>
            <origin xyz="0.0 0.0 0.075" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder length="0.15" radius="0.1"/>
            </geometry>
            <material name="blue" />
        </visual>
    </link>

    <link name="neck">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder length="0.08" radius="0.025"/>
            </geometry>
            <material name="white" />
        </visual>
    </link>
    
    <link name="face">
        <visual>
            <origin xyz="0.1 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                 <box size="0.035 0.12 0.18"/>
            </geometry>
            <material name="grey" />
        </visual>
    </link>

    <!-- Joints -->
    <joint name="base_to_neck" type="revolute">
        <parent link="base_link"/>
        <child link="neck"/>
        <origin xyz="0.0 0.0 0.155" rpy="0.0 0.0 0.0" />
        <axis xyz="0 0 1" />
        <limit effort="1000.0" lower="${-2*pi/5}" upper="${2*pi/5}" velocity="5.0" />
    </joint>

    <joint name="neck_to_face" type="revolute">
        <parent link="neck"/>
        <child link="face"/>
        <origin xyz="0.0 0.0 0.085" rpy="0.0 0.0 0.0" />
        <axis xyz="0 1 0" />
        <limit effort="1000.0" lower="${-pi/2}" upper="0.18" velocity="5.0" />
    </joint>

</robot>
